<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dp" />
            <gradient android:angle="-90" android:startColor="#e0afa8" android:endColor="#e0afa8"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="50dp" />
            <solid android:color="#E2978D"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dp" />
            <gradient android:angle="-90" android:startColor="#E2978D" android:endColor="#E2978D" />
        </shape>
    </item>
</selector>