<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootRL"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FEF5EF">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/profilebackground"
            android:layout_alignParentTop="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="30dp"
            android:paddingTop="30dp">
            <ImageView
                android:layout_width="133dp"
                android:layout_height="187dp"
                android:src="@drawable/personprofilepicture"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Bonnie"
                    android:textColor="#FEF5EF"
                    android:textSize="72px"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/flag" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginLeft="10dp"
                        android:text="34 missions"
                        android:textColor="#FEF5EF"
                        android:textSize="42px"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/flame" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginLeft="10dp"
                        android:text="10 day streak"
                        android:layout_marginTop="2dp"
                        android:textColor="#FEF5EF"
                        android:textSize="42px"/>
                </LinearLayout>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#384862"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="2dp"
                    app:cardCornerRadius="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:text="362 pts"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#FEF5EF"
                        android:textSize="28px" />
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Badges"
                android:textColor="#384862"
                android:textSize="72px" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/onfire" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginLeft="40dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/besties" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginLeft="40dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/mooch" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginLeft="40dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/mooch" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Your Progress"
                android:textColor="#384862"
                android:textSize="72px" />

            <TextView
                android:layout_width="281dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins"
                android:text="these are your points week over week since you joined the family!"
                android:textColor="#384862"
                android:textSize="36px" />
            <ImageView
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_gravity="left"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:src="@drawable/graph" />



            <Button
                android:id="@+id/button_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="30dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/buttonstuff"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing="0.1"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="logout"
                android:textColor="#FEF5EF" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>