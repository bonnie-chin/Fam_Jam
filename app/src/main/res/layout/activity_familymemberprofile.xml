<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootRL"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FEF5EF">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/profilebackground"
            android:layout_alignParentTop="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="30dp"
            android:paddingTop="30dp">
            <ImageView
                android:layout_width="133dp"
                android:layout_height="187dp"
                android:src="@drawable/personprofilepicture"/>
            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Grace"
                        android:textColor="#FEF5EF"
                        android:textSize="72px"/>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="-2dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/whiteoutline"
                        android:textColor="#FEF5EF"
                        android:textAllCaps="false"
                        android:layout_marginBottom="5dp"
                        android:text="sister"/>

                </LinearLayout>
                <Spinner
                    android:id="@+id/products_spinner"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:entries="@array/level_array"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:background="@drawable/level_spinner"
                    android:theme="@style/SpinnerTheme"
                    />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Badges"
                android:textColor="#384862"
                android:textSize="72px" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/onfire" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginLeft="40dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/besties" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginLeft="40dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/mooch" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginLeft="40dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/mvpbadge" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/busybee" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginLeft="40dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/realone" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Statistics"
                android:textColor="#384862"
                android:textSize="72px" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="30dp"
                >

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"

                            android:adjustViewBounds="true"
                            android:src="@drawable/greenrectangle" />
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:textColor="#384862"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_horizontal"
                        android:text="35"
                        android:textSize="72px"
                        />
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:textColor="#384862"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:text="day streak"

                        android:textSize="36px"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="50dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"

                        android:adjustViewBounds="true"
                        android:src="@drawable/greenrectangle" />
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:textColor="#384862"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_horizontal"
                        android:text="45"
                        android:textSize="72px"
                        />
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:textColor="#384862"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:text="points"

                        android:textSize="36px"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="50dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"

                        android:adjustViewBounds="true"
                        android:src="@drawable/greenrectangle" />
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:textColor="#384862"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_horizontal"
                        android:text="63"
                        android:textSize="72px"
                        />
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:textColor="#384862"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:text="missions"

                        android:textSize="36px"
                        />
                </RelativeLayout>
            </LinearLayout>







        </LinearLayout>
    </ScrollView>

</LinearLayout>